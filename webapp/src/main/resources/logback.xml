<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%-15.15thread{15}] [%-30.30logger{30}] %.-1level: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.koldyr.genealogy.controllers" level="TRACE" />

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
